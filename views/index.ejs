         const habitComplete = document.querySelectorAll('.habitComplete');
         function copyUrl() {
    // Get the URL text from the span element
    const urlText = document.getElementById('url-text').innerText;

    // Create a temporary input element to copy the URL
    const tempInput = document.createElement('input');
    tempInput.value = urlText;
    document.body.appendChild(tempInput);
    tempInput.select();
    document.execCommand('copy');
    document.body.removeChild(tempInput);

    // Optionally, show a notification or alert
    alert('URL copied to clipboard!');
  }

         const addClass = (elements, className) => {
           elements.classList.add(className)
         };

         const removeClass = (elements, className) => {
           elements.classList.remove(className)
         };

         activity.forEach((e) => {
