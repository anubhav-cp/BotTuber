             addClass(aboutInfo[leaderboard.indexOf(e)], 'hidden');
             removeClass(activity[leaderboard.indexOf(e)], 'bg-gray-400');
             removeClass(about[leaderboard.indexOf(e)], 'bg-gray-400');
