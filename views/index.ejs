             e.classList.add('bg-gray-400')

             addClass(activityStatus[about.indexOf(e)], 'hidden');
             addClass(leaderboardRank[about.indexOf(e)], 'hidden');
             removeClass(aboutInfo[about.indexOf(e)], 'hidden');
             removeClass(activity[about.indexOf(e)], 'bg-gray-400');
             removeClass(leaderboard[about.indexOf(e)], 'bg-gray-400');
           });
         });

         habitComplete.forEach((e) => {
