             event.preventDefault();
             e.classList.add('bg-gray-400')
             removeClass(activityStatus[activity.indexOf(e)], 'hidden');
             addClass(leaderboardRank[activity.indexOf(e)], 'hidden');
             addClass(aboutInfo[activity.indexOf(e)], 'hidden');
             removeClass(leaderboard[activity.indexOf(e)], 'bg-gray-400');
             removeClass(about[activity.indexOf(e)], 'bg-gray-400');
           });
         });

         leaderboard.forEach((e) => {
